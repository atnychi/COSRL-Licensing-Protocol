# /etc/nginx/nginx.conf or site conf
geoip_country /usr/share/GeoIP/GeoIP.dat;

map $geoip_country_code $block_access {
    default 1;
    US 0;
}

server {
    listen 80;
    server_name crown.run;

    if ($block_access) {
        return 403;
    }

    location / {
        proxy_pass http://localhost:3000;
    }
}
